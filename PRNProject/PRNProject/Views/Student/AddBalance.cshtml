@using PRNProject.Models
@using System.Globalization
@model Student
<link href="~/css/StyleStudentProfile.css" rel="stylesheet" />
<div>
    <div class="header">
        Account Balance for <span>@Model.FirstName @Model.MidName @Model.LastName</span>
    </div>
    <div class="cur-balance">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" style="    width: 20%;">Current Balance</th>
                    <th scope="col" id="cur-balance" style="font-size: 150%;text-align: center;">@(string.Format(new CultureInfo( "vi-VN", false ).NumberFormat,"{0:C0}", Model.Balanced))</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            Add Balance
                        </button>
                    </th>
                    <td id="message">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Add Balance</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/Student/DoAddBalance" method="post" id="add-balance-frm">
                        <input type="hidden" name="id" value="1" />
                        <label for="more-balance">Add More Balance</label>
                        <input type="number" id="more-balance" oninput="checkBalance(this);" name="balance" />
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-add-balance-btn" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="add-balance-btn">Add</button>
                </div>
            </div>
        </div>
    </div>
</div>